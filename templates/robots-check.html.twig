<html>
<head>
    <title>Robots Check</title>
    <style>
        #go {
            background-color: green;
            color: white;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 10px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    </style>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<body>
<form method="post" action="{{ uri }}" class="form" id="robots-check-form">
    <input type="hidden" name="is_human" value="1">
    <button class="g-recaptcha"
            id="go"
            data-sitekey="{{ publicKey }}"
            data-callback='onSubmit'
            data-action='submit'>Перейти на сайт
    </button>
</form>
<script>
	function onSubmit(token) {
		document.getElementById("robots-check-form").submit();
	}
</script>
</body>
</html>