{% set ratingItems = [
    {
        'link' : 'https://zoon.ru/msk/building/torgovo-servisnaya_kompaniya_masterskaya_zhalyuzi/',
        'img': 'img/rating/logo-zoon.png',
        'alt': 'Zoon.ru',
        'stars': 45,
        'rating': 4.8
    },
    {
        'link' : 'https://yandex.ru/maps/org/masterskaya_zhalyuzi/199082594181/',
        'img': 'img/rating/logo-yandex.png',
        'alt': 'Yandex',
        'stars': 45,
        'rating': 4.7
    },
    {
        'link' : 'https://goo.gl/maps/RomdL3CkncjsZyr47',
        'img': 'img/rating/logo-google.png',
        'alt': 'Google',
        'stars': 5,
        'rating': 5
    },
    {
        'link' : 'https://go.2gis.com/i6gws',
        'img': 'img/rating/logo-2gis.png',
        'alt': '2 Gis',
        'stars': 5,
        'rating': 5
    },
] %}
<div class="rating">
    <div class="container container2">
        <h2>Независимые отзывы:</h2>
        <div class="row justify-content-xs-center">
            {% for ratingItem in ratingItems %}
                <div class="col-lg-3 col-6">
                    <a target="_blank" href="{{ ratingItem.link }}">
                        <div class="rating-card">
                            <div class="img">
                                <img src="{{ app.request.schemeAndHttpHost }}{{ asset(ratingItem.img) }}"  alt="{{ ratingItem.alt }}">
                            </div>
                            <div class="text">
                                <img src="{{ app.request.schemeAndHttpHost }}/img/rating/stars-{{ ratingItem.stars }}.jpg" alt="{{ ratingItem.rating }}">
                                <b>{{ ratingItem.rating }} из 5</b>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>