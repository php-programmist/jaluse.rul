{% if popular is not empty %}
    <h2>{{ page.recommendedTitle }}:</h2>
    <div class="products">
        {% for item in popular %}
            <div class="product">
                <a href="{{ app.request.schemeAndHttpHost }}/{{ item.uri }}/">
                    <img src="{{ app.request.schemeAndHttpHost }}{{ asset(item.cardImageUrl) }}" alt="{{ item.name }}">
                </a>
                <div class="product__name">
                    <a href="{{ app.request.schemeAndHttpHost }}/{{ item.uri }}/">{{ item.name }}</a>
                </div>
                <div class="product__price">
                    {{ min_price(item) }}
                </div>
                <button
                        formaction="tel:{{ phone }}"
                        data-background-color="blue"
                        data-color="white"
                        data-turbo="false"
                        data-primary="true"
                >
                    Рассчитать
                </button>
                <button
                        formaction="tel:{{ phone }}"
                        data-background-color="blue"
                        data-color="white"
                        data-turbo="false"
                        data-primary="true"
                >
                    Консультация
                </button>
            </div>
        {% endfor %}
    </div>
{% endif %}