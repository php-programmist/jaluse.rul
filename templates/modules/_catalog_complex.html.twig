<div class="products">
    {% for item in items %}
        <div class="product">
            <a href="/{{ item.uri }}/">
                {% if needWrapper ?? true %}
                <div class="product__image_wrapper">
                    {% endif %}
                    <img {{ lazy_load(asset(item.cardImageUrl) | imagine_filter('catalog_thumb')) }}
                            alt="{{ item.name }}">
                    {% if needWrapper ?? true %}
                </div>
                {% endif %}
        
            </a>
            <div class="product__name">
                <a href="/{{ item.uri }}/">{{ item.name }}</a>
            </div>
            <div class="product__price">
                {{ min_price(item, false, true) }}
            </div>
            <div class="d-flex justify-content-center flex-wrap">
                <img src="/img/buttons/calculate.jpg" alt="Рассчитать" class=" js-modal-open" data-title="Рассчитать">
                <img src="/img/buttons/consultation.jpg" alt="Консультация" class=" js-modal-open"
                     data-title="Консультация">

            </div>
        </div>
    {% endfor %}
</div>