        <div {{ lazy_load_bg('/img/slide3.jpg',['b1fon','b1fon3']) }}></div>
    </div>
    <div class="block1-wrap">
        <div class="container">
            <div class="row">
                <h1 class="col-12" itemprop="name">{{ (h1 ?? 'ЖАЛЮЗИ НА ОКНА ОТ ПРОИЗВОДИТЕЛЯ') | raw }} </h1>
                <div itemprop="description" class="d-none">{{ description }}</div>
