<div class="products">
    {% for item in items %}
        <div class="product">
            <a href="/{{item.uri}}/" target="_blank"><img {{ lazy_load(item.imageUrl) }} alt="{{ item.name }}"></a>
            <div class="product__name"><a href="/{{item.uri}}/" target="_blank">{{ item.name }}</a></div>
            <div class="product__price">от {{ item.price }} руб</div>
            <div class="d-flex">
                <button class="mbtn mbtn_orange modal-open" data-title="Рассчитать">Рассчитать</button>
                <button class="mbtn modal-open modal-open" data-title="Консультация">Консультация</button>
            </div>

        </div>
    {% endfor %}
</div>