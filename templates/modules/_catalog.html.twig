<div class="container products">
    {% for item in items %}
        <div class="product">
            <a href="/{{ item.uri }}/">
                <div class="product__image_wrapper">
                    <img {{ lazy_load(asset(item.cardImageUrl) | imagine_filter('catalog_thumb')) }}
                            alt="{{ item.name }}">
                </div>
            </a>
            <div class="product__name">
                <a href="/{{ item.uri }}/">{{ item.name }}</a>
            </div>
            <div class="product__price">
                {% if area??false %}
                    {{ item.price }} руб/м2
                {% else %}
                    от {{ item.price }} руб
                {% endif %}
        
            </div>
            <div class="d-flex justify-content-center">
                <button class="mbtn mbtn_orange js-modal-open" data-title="Рассчитать">Рассчитать</button>
            </div>

        </div>
    {% endfor %}
</div>