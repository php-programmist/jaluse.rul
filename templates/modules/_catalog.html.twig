<div class="products">
    {% for item in items %}
        <div class="product">
            <a href="/{{item.uri}}/" target="_blank">
                <div class="product__image_wrapper">
                    <img {{ lazy_load(item.cardImageUrl) }} alt="{{ item.name }}">
                </div>
            </a>
            <div class="product__name">
                <a href="/{{item.uri}}/" target="_blank">{{ item.name }}</a>
            </div>
            <div class="product__price">
                {% if area??false %}
                    {{ item.price }} руб/м2
                {% else %}
                    от {{ item.price }} руб
                {% endif %}

            </div>
            <div class="d-flex justify-content-center">
                <button class="mbtn mbtn_orange modal-open" data-title="Рассчитать">Рассчитать</button>
            </div>

        </div>
    {% endfor %}
</div>