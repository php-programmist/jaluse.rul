<div class="recommended_products">
    {% for item in items %}
        <div class="product_wrapper">
            <div class="product">
                <a href="/{{ item.uri }}/" target="_blank">
                    {% if needWrapper ?? true %}
                    <div class="product__image_wrapper">
                        {% endif %}
                        <img {{ lazy_load(asset(item.cardImageUrl) | imagine_filter('catalog_thumb')) }}
                                alt="{{ item.name }}">
                        {% if needWrapper ?? true %}
                    </div>
                    {% endif %}
            
                </a>
                <div class="product__name">
                    <a href="/{{ item.uri }}/" target="_blank">{{ item.name }}</a>
                </div>
                <div class="product__price">
                    {{ min_price(item) }}
                </div>
                <div class="d-flex justify-content-center flex-wrap">
                    <button class="mbtn mbtn_orange js-modal-open" data-title="Рассчитать">Рассчитать</button>
                    <button class="mbtn js-modal-open" data-title="Консультация">Консультация</button>
    
                </div>
            </div>
        </div>

    {% endfor %}
</div>

<div class="catalog_button">
    <a class="mbtn" href="/zhalyuzi/#content">Каталог</a>
</div>